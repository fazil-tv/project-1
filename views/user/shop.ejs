									<div class="col-lg-4 col-sm-6
									 ftco-animate d-flex">
										<div class="product d-flex flex-column">
											<a href="/singleproduct?id=<%=product._id%>" class="img-prod"><img
													class="img-fluid" src="/sharpimg/<%= product.images.image1%>"
													alt="Colorlib Template">
												<span class="status">
													<%=product.offer%>% Off
												</span>
												<div class="overlay"></div>
											</a>

											<span class="statuswishlist" id="wishlistrelode">



												<%if (Wishlist){%>
													<i onclick="addwishlist('<%=product._id%>')"
														id="buttonId<%=product._id%>"
														class="<%= Wishlist.product.findIndex(item=>item.productId === product._id.toString())===-1 ? 'fa-regular' : 'fa-solid' %> fa-heart"></i>

													<%}else{%>
														<i onclick="addwishlist('<%=product._id%>')" id=""
															class="fa-regular fa-heart"></i>

														<%}%>

											</span>






