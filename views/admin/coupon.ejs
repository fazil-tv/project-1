        <section class="content-main">
            <div class="pagination-area mt-30 mb-50 usertable">
                <% if (coupon.length> 0) { %>

                    <table id="tablePagination" class="table table-hover">
                        <thead style="background-color: #3BB77E;">
                            <tr>
                                <th scope="col" class="th-header">NO</th>
                                <th scope="col" class="th-header">Name</th>
                                <th scope="col" class="th-header">Coupon code</th>
                                <th scope="col" class="th-header">Discount</th>
                                <th scope="col" class="th-header">Criteria Amount</th>
                                <th scope="col" class="th-header">Activation Date</th>
                                <th scope="col" class="th-header">Expiry Date</th>
                                <th scope="col" class="th-header">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for (let i=0; i < coupon.length; i++) { %>
                                <tr>
                                    <td>
                                        <%= i+1 %>
                                    </td>
                                    <td>
                                        <%=coupon[i].name%>
                                    </td>
                                    <td>
                                        <%= coupon[i].couponCode %>
                                    </td>
                                    <td>
                                        <%= coupon[i].discountPercentage%>
                                    </td>
                                    <td>
                                        <%= coupon[i].criteriaValue%>
                                    </td>
                                    <td>
                                        <%= coupon[i].activationDate.toLocaleDateString('en-US', { year:'numeric',
                                            month: 'short' , day: '2-digit' }).replace(/\//g, '-' ) %>
                                    </td>
                                    <td>
                                        <%= coupon[i].expiryDate.toLocaleDateString('en-US', { year:'numeric',
                                            month: 'short' , day: '2-digit' }).replace(/\//g, '-' ) %>
                                    </td>

                                    <td>
                                        <b>
                                            <button class="Edit-category"
                                                onclick="deleteCoupon('<%=coupon[i]._id%>')">delete
                                            </button>
                                        </b>
                                    </td>
                                </tr>
                                <% } %>
                                    <% }else{ %>
                                        <td>
                                            <p class="text-center">no coupons available</p>
                                        </td>
                                        <%}%>
                        </tbody>
                    </table>
            </div>
            <script>







                function deleteCoupon(couponId) {

                    fetch(`/admin/removecoupon`, {
                        method: 'DELETE',
                        headers: {
                            "Content-Type": "application/json"
                        },

                        body: JSON.stringify({ couponId })
                    })
                        .then(response => response.json())
                        .then(data => {
                            if (data.status) {
                                Swal.fire({
                                    title: "coupon deleted successfully !",
                                    icon: "error",
                                    confirmButtonText: "OK",

                                });
                                window.location.href = "/admin/coupon";
                              
                            }
                        })
                        .catch(error => {
                            console.log("error", error);
                        });

                }

            </script>







