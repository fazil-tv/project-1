                <div class="card-body">
                    <div class="row mb-50 mt-20 order-info-wrap">
                        <div class="col-md-4">
                            <article class="icontext align-items-start">
                                <span class="icon icon-sm rounded-circle bg-primary-light">
                                    <i class="text-primary material-icons md-person"></i>
                                </span>
                                <div class="text">
                                    
                                    <h6 class="mb-1">Customer</h6>


                        
                                    <% userAddress.forEach(function(item) { %>
                                        <% item.address.forEach(function(addressItem) { %>
                                          <div>
                                            Name: <%= addressItem.fullname %><br>
                                            Mobile: <%= addressItem.mobile %><br>
                                            <%= addressItem.email %><br>
                                            
    
                                          </div>
                                     
                     
                                </div>
                               
                            </article>
                        </div>
                        <!-- col// -->
                        <div class="col-md-4">
                            <article class="icontext align-items-start">
                                <span class="icon icon-sm rounded-circle bg-primary-light " style="margin-right: 10px !important;">
                                    <i class="text-primary material-icons md-local_shipping"></i>
                                </span>
                                <div class="text">
                                 
                                    <h6 class="mb-1">Order info</h6> 
                                    Order ID: <%=orders.orderId%><br>
                                    Paymet Methode: <%=orders.payment%><br>
                                    OrderDate:<%=orders.orderDate.toLocaleDateString('en-US', {
                                        weekday: 'short' , year: 'numeric' , month: 'short' ,
                                    
                                        hour: 'numeric',
                                        minute: 'numeric'
                                        })%>


                                    
                                 
                                </div>
                            </article>
                          
                        </div>
                        <!-- col// -->
                        <div class="col-md-4">
                            <article class="icontext align-items-start">
                                <span class="icon icon-sm rounded-circle bg-primary-light">
                                    <i class="text-primary material-icons md-place"></i>
                                </span>
                                <div class="text">
                                    <h6 class="mb-1">Deliver to</h6>
                                    House Name: <%= addressItem.houseName %><br>
                                    City: <%= addressItem.city %><br>
                                    Pin: <%= addressItem.pin %><br>

                                  
                                </div>

                                <% }) %>
                                <% }) %>
                            </article>
                        </div>
                        <!-- col// -->
                    </div>
                    <!-- row // -->
                    <div class="row">
                        <div class="col-lg-12" style="text-align: center;">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th width="10%">Product</th>
                                            <th width="10%">Name</th>
                                            <th width="10%">Unit Price</th>
                                            <th width="10%">Quantity</th>
                                            <th width="10%" class="">Total</th>
                                            <th width="15%" class="">Status</th>
                                            <th width="15%" class="">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody id="relodedive">



                                        <%= console.log("skdjsk",orders,"lwdsjaldk")%>

                                            <% orders.products.forEach(product=> { %>


                                                <tr>
                                                    <td>
                                                        <a class="itemside justify-content-center" href="#">
                                                            <div class="left">



                                                                <img src="/sharpimg/<%= product.productId.images.image1 %>"
                                                                    width="40" height="40" class="img-xs" alt="Item" />
                                                            </div>

                                                        </a>
                                                    </td>
                                                    <td>
                                                        <div class="info">
                                                            <%= product.productId.name %>
                                                        </div>
                                                    </td>
                                                    <td>₹<%= product.productId.price %>
                                                    </td>
                                                    <td>
                                                        <%= product.count %>
                                                        <% console.log(product) %>
                                                    </td>
                                                    <td class="">₹<%= product.  totalPrice %>
                                                    </td>



                                                    <% if (product.productstatus==="canceled" ) { %>
                                                        <td><span
                                                                class="badge rounded-pill alert-danger">Canceled</span>
                                                        </td>
                                                        <% } else if(product.productstatus==="Out for Delivery" ){ %>
                                                            <!-- <td><span class="badge rounded-pill alert-warning">Pending</span></td>   -->
                                                            <td><span class="badge rounded-pill alert-warning ">Out for
                                                                    Delivery</span>
                                                            </td>
                                                            <% }else if(product.productstatus==="Shipped" ){ %>
                                                                <!-- <td><span class="badge rounded-pill alert-warning">Pending</span></td>   -->
                                                                <td><span
                                                                        class="badge rounded-pill alert-info">Shipped</span>
                                                                </td>
                                                                <% }else if(product.productstatus==="Delivered" ){ %>
                                                                    <!-- <td><span class="badge rounded-pill alert-warning">Pending</span></td>   -->
                                                                    <td><span
                                                                            class="badge rounded-pill alert-success">Delivered</span>
                                                                    </td>



                                                                    <%}else if(product.productstatus==="return" ){ %>
                                                                        <td><span
                                                                                class="badge rounded-pill alert-dark ">Return</span>
                                                                        </td>
                                                                        <%}else { %>
                                                                            <td><span
                                                                                    class="badge rounded-pill alert-info ">Placed</span>
                                                                            </td>
                                                                            <%}%>

                                                                                <td>


                                                                                    <%console.log(product._id,orders._id)%>

                                                                                        <%if(product.productstatus
                                                                                            !=='Delivered' ){%>
                                                                                                <select class="form-select d-inline-block mb-lg-0 mr-5 mw-200" id="<%= orders._id + product._id %>" <%= (product.productstatus === "canceled" || product.productstatus === "return") ? 'disabled' : '' %> onchange="changeProductStatus('<%= orders._id %>','<%= product._id %>')">
                                                                                                    <option value="placed" <%= (product.productstatus === 'placed') ? 'selected' : '' %>>Placed</option>
                                   
                                                                                                    <option value="Shipped" <%= (product.productstatus === 'Shipped') ? 'selected' : '' %>>Shipped</option>
                                                                                                    <option value="Out for Delivery" <%= (product.productstatus === 'Out for Delivery') ? 'selected' : '' %>>Out for Delivery</option>
                                                                                                    <option value="Delivered" <%= (product.productstatus === 'Delivered') ? 'selected' : '' %>>Delivered</option>
                                                                                                </select>
                                                                                                
                                                                                            <%}else{%>
                                                                                                <p>no action</p>
                                                                                                <%}%>

                                                                                </td>

                                                </tr>
                                                <%})%>




                                    </tbody>
                                </table>
                            </div>
