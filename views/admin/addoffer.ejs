<script>

    function addofferValidation() {
    

        event.preventDefault();
        const offername = document.getElementById('couponname').value;
        const DiscountPercentage = parseFloat(document.getElementById('DiscountPercentage').value);
        const ActivateDate = document.getElementById('ActivateDate').value;
        const ExpiryDate = document.getElementById('ExpiryDate').value;

        document.getElementById('error-messages').innerText = '';
        document.getElementById('couponname-e').innerText = '';
        document.getElementById('DiscountPercentage-e').innerText = '';
        document.getElementById('ActivateDate-e').innerText = '';
        document.getElementById('ExpiryDate-e').innerText = '';


        let isValid = true;

        if (!offername  || isNaN(DiscountPercentage)  || !ActivateDate || !ExpiryDate) {
            isValid = false;
            document.getElementById('error-messages').innerText = 'Please fill in all required fields.';
            return isValid;
        }

        
        if (DiscountPercentage <= 1 || DiscountPercentage > 99 ) {
            document.getElementById('DiscountPercentage-e').innerText = 'Discount percentage must be between 1 and 100';
            isValid = false;
        }
       

        const activateDate = new Date(ActivateDate);
        const expiryDate = new Date(ExpiryDate);
        if (isNaN(activateDate) || isNaN(expiryDate)) {
            document.getElementById('ActivateDate-e').innerText = 'Invalid date format';
            document.getElementById('ExpiryDate-e').innerText = 'Invalid date format';
            isValid = false;
        } else if (expiryDate <= activateDate) {
            document.getElementById('ActivateDate-e').innerText = 'Expiry date must be after activate date';
            isValid = false;
        }
        
        if (!isValid) {
            return

        }
        else {
            
            addoffer()
        }
    }

    function addoffer() {
        const offername = document.getElementById('couponname').value;
        const offerPercentage = parseFloat(document.getElementById('DiscountPercentage').value);
        const ActivateDate = document.getElementById('ActivateDate').value;
        const ExpiryDate = document.getElementById('ExpiryDate').value;

        const data = {
            offername,
            offerPercentage,
            ActivateDate,
            ExpiryDate
        };
       


        fetch('/admin/addoffer', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify(data)
        })
            .then(response => response.json())
            .then(data => {
                if (data.status) {
                    Swal.fire({
                        title: "Success",
                        text: "Offer added successfully!",
                        icon: "success",
                        confirmButtonText: "OK",

                    });
                    window.location.href = "/admin/offer";

                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Offer is already added',
                    });
                }
            })
            .catch(error => {
                console.error('Error:', error);
            });
    }




    function generateRandomString() {
        const letters = 'abcdefghijklmnopqrstuvwxyz';
        const numbers = '0123456789';

        let randomString = '';

        for (let i = 0; i < 4; i++) {
            const randomIndex = Math.floor(Math.random() * letters.length);
            randomString += letters.charAt(randomIndex);
        }

        for (let i = 0; i < 4; i++) {
            const randomIndex = Math.floor(Math.random() * numbers.length);
            randomString += numbers.charAt(randomIndex);
        }

        randomString = randomString.split('').sort(() => Math.random() - 0.5).join('');

        return randomString;
    }
