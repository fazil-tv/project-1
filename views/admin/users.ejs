        <script>
            function blockUser(userId) {

                // Get the button element associated with the user
                const blockButton = document.getElementById(`blockButton${userId}`);

                // Get the current text content of the button
                let text = blockButton.innerHTML;

                // Check the text content to determine whether to block or unblock the user
                if (text === "block") {
                    console.log("done")

                    fetch(`/admin/blockUser`, {
                        method: 'PUT',
                        headers: {
                            "Content-Type": "application/json"
                        },

                        body: JSON.stringify({ userId })
                    })
                        .then(response => response.json())
                        .then(data => {
                            window.location.reload();   
                            
                        })
                        .catch(error => console.error('Error blocking user:', error));
                } else if (text === "unblock") {
                    // Unblock the user if they are currently blocked
                    fetch(`/admin/unblockUser`, {
                        method: 'PUT',
                        headers: {
                            "Content-Type": "application/json"
                        },
                        body: JSON.stringify({ userId })
                    })
                        .then(response => response.json())
                        .then(data => {
                            // Redirect to the user administration page after unblocking
                            window.location.reload();
    
                        })
                        .catch(error => console.error('Error unblocking user:', error));
                }
            }

        </script>

        <script>
            function showConfirmationModal(userId, status) {
                //button text changing
                if (status == "true") {
                    document.getElementById('mbid').innerText = 'unblock'
                    document.getElementById('mbid').style.backgroundColor = '#ed6f56';
                    
                } else {
                    document.getElementById('mbid').innerText = 'block'
                    document.getElementById('mbid').style.backgroundColor = '#29A56C';
                }
                $('#confirmationModal').data('userId', userId);

                $('#confirmationModal').modal('show');
            }

            function confirmBlockUser() {

                const userId = $('#confirmationModal').data('userId');
                console.log(userId);
                blockUser(userId)

                $('#confirmationModal').modal('hide');
            }    
        </script>




