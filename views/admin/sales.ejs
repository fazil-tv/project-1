    <script>

        let data = [];


        function appendOrderToTable(order, index) {
            if (index === 0) data = [];
            data.push(order);

           
            const tableBody = document.getElementById('table-body');
            const row = document.createElement('tr');
            row.innerHTML = `
            <td>${order.index + 1}</td>    
            <td>${order.orderId}</td>
            <td>${order.productData[0] ? order.productData[0].name : ''}</td>
            <td>${order.products ? order.products.count : ''}</td>
            <td>${order.products ? order.products.price : ''} </td>
            <td>${order.products ? order.products.totalPrice : ''}</td>
            <td>${order.orderDate.toString().slice(-4) ? order.orderDate.toString().slice(0, 10) : ''}</td>
            <td>${order.userData[0] ? order.userData[0].email : ''}</td>
            <td>${order.payment}</td>`;
            tableBody.appendChild(row);
        }

        function downlode() {
            const selectedformat = document.getElementById("selectformat").value;

            
            const datas = data;
        

            try {
                fetch('/admin/salesreport', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        datas,
                        selectedformat,



                    })
                })
                    .then(response => {
                        if (!response.ok) {
                            throw new Error('Failed to generate PDF');
                        }
                        return response.blob();
                    })
                    .then(blob => {

                        if (selectedformat === "PDF") {
                            const url = window.URL.createObjectURL(blob);
                            const a = document.createElement('a');
                            a.href = url;
                            a.download = 'invoice.pdf';
                            document.body.appendChild(a);
                            a.click();
                            document.body.removeChild(a);
                            window.URL.revokeObjectURL(url);
                        } else {

                            const url = window.URL.createObjectURL(blob);
                            const a = document.createElement('a');
                            a.href = url;
                            a.download = 'sales_report.xlsx';
                            document.body.appendChild(a);
                            a.click();
                            document.body.removeChild(a);
                            window.URL.revokeObjectURL(url);
                        }


                    })
                    .catch(error => {
                        console.log(error);
                    });
            } catch (error) {
                console.log(error);
            }
        }

    </script>

