                                        <div class="input-upload col-lg-12">
                                            <div class="form-group">
                                                <h5>image 1</h5>
                                                <a style="display: none;" class="closbutton"
                                                    onclick="cancelImage('imageinput1', 'displayimg1')"><i
                                                        class="fa-solid fa-circle-xmark"></i></a>
