                            <h5 class="modal-title" id="confirmationModalLabel">Confirmation</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <% if (offer.length> 0) { %>
                                <div class="row " style="justify-content: space-between;">
                                    <% for (let i=0; i < offer.length; i++) { %>
                                        <div class="col-md-6 mb-4 p-0 ">
                                            <div class="card m-3">
                                                <div class="card-body">
                                                    <h5 class="card-title">
                                                        <%= offer[i].name %>
                                                    </h5>
                                                    <p class="card-text">Discount: <%= offer[i].discountAmount %>
                                                    </p>
                                                    <p class="card-text">Activation Date: <%=
                                                            offer[i].activationDate.toLocaleDateString('en-US', {
                                                            year:'numeric', month: 'short' , day: '2-digit'
                                                            }).replace(/\//g, '-' ) %>
                                                    </p>
                                                    <p class="card-text">Expiry Date: <%=
                                                            offer[i].expiryDate.toLocaleDateString('en-US', {
                                                            year:'numeric', month: 'short' , day: '2-digit'
                                                            }).replace(/\//g, '-' ) %>
                                                    </p>

                                                    <button class="btn Edit-category" onclick="offerapply('<%= offer[i]._id %>')">Apply</button>
                                                </div>
                                            </div>
                                        </div>
                                        <% } %>
                                </div>
                                <% } else { %>
                                    <p class="text-center">No offers available</p>
                                    <% } %>
                        </div>
        </section>
        </div>
