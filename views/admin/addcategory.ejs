<script>
    function addCategoryValidation() {
        event.preventDefault();
        const categoryname = document.getElementById('product_name').value;
        console.log(categoryname);
        const description = document.getElementById('product_disc').value;

        const validateCategoryName = (categoryname) => {
            const categoryRegex = /^[a-zA-Z0-9]+\s*[a-zA-Z0-9]*$/;
            return categoryRegex.test(categoryname);
        };



        const isCategoryValid = validateCategoryName(categoryname);

        if (isCategoryValid && description) {

            // $('#mycard').submit();
            // return console.log("Category name is valid");
            console.log(categoryname, "######", description);
            document.getElementById('invalid').style.display="none"


            addcategory(categoryname, description);

        } else {
            document.getElementById('invalid').style.display="block"
            console.log("Invalid category name or empty description");
        }

    }







    function addcategory(categoryname, description) {
        console.log("$$$$$", categoryname, "%%%%%", description);

        fetch('/admin/addcategory', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({
                categoryname,
                description
            })
        })
            .then(response => response.json())
            .then(data => {
                if (data.status === "failed") {

                    document.getElementById("added").style.display = "block";

                

                    // window.location.href = "/addcategory";
                    console.log("this category is already added");
                } else {
                    window.location.href = "/admin/category";
                }


            }).catch(error => {
                console.log(error);

            })
    }















